generator client {
  provider = "prisma-client-js"
  output   = "../app/_generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RegistrationStep {
  CREATE_FAMILY
  INVITE_OTHER_ADULTS
  COMPLETE
}

enum UserRole {
  ADMIN
  PARENT
  TEACHER
  SUPPORT
  CARER
  MEDICAL
}

enum RelationshipType {
  PARENT
  TEACHER
  SOCIAL_WORKER
  DOCTER
  NURSE
  GUARDIAN
}

model User {
  id          Int    @id @default(autoincrement())
  firstName   String
  surname     String
  email       String @unique
  password    String
  phoneNumber String @unique

  registrationStep RegistrationStep @default(CREATE_FAMILY)
  role             UserRole         @default(PARENT)

  createdAt  DateTime        @default(now())
  updatedAt  DateTime        @updatedAt
  dependents UserDependent[]
}

model Dependent {
  id         Int    @id @default(autoincrement())
  firstName  String
  surname    String
  schoolName String

  dateOfBirth DateTime
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  users       UserDependent[]
}

model UserDependent {
  userId      Int
  dependentId Int

  relationship RelationshipType

  user      User      @relation(fields: [userId], references: [id])
  dependent Dependent @relation(fields: [dependentId], references: [id])

  @@id([userId, dependentId])
}
